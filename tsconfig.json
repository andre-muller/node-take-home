{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "~/tests/*": ["tests/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "tests"]
}
