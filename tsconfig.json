{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src", "tests"],
  "exclude": []
}
